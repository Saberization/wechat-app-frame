<style lang="scss">
@import '../empui/common';

/* 基础样式 */
.emp-dialog-container {
  position: fixed;
  top: 45%;
  left: 50%;
  width: 80%;
  height: 0;
  font-size: 16px;
  overflow: hidden;
  transition: all 0.2s linear;
  border-radius: 4px;
  background-color: #fff;
  transform: translate3d(-50%, -50%, 0);
  color: #333;
  opacity: 0;
}

.emp-dialog-mask {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.6);
  transition: 0.3s;
  display: none;
}

/* 弹出层内容 */
.emp-dialog-header {
  padding: 15px 0 0;
  text-align: center;
}

.emp-dialog-content {
  position: relative;
  padding: 15px 20px;
  line-height: 1.5;
  min-height: 40px;

  &::after {
    @include hairline;
    border-bottom-width: 1px;
  }
}

/* 在有标题时，需要减弱内容的存在感 */
.emp-dialog-content-title {
  color: #999;
  font-size: 14px;
}

.emp-dialog-footer {
  overflow: hidden;
}

.emp-dialog-button {
  line-height: 50px;
  height: 50px;
  padding: 0 5px;
  border-radius: 0;
  margin-bottom: 0;

  &::after {
    border-width: 0;
    border-radius: 0;
  }
}

/* 展示时，样式重置 */
.emp-dialog-show .emp-dialog-container {
  opacity: 1;
  height: auto;
}

.emp-dialog-show .emp-dialog-mask {
  display: block;
}

/* 水平/垂直布局 */
.emp-dialog-footer-horizon {
  display: flex;
}

.emp-dialog-footer-horizon .emp-dialog-button {
  flex: 1;

  &::after {
    border-right-width: 1px;
  }

  &:last-child::after {
    border-right-width: 0;
  }
}

.emp-dialog-footer-vertical .emp-dialog-button {
  flex: 1;

  &::after {
    border-bottom-width: 1px;
  }

  &:last-child::after {
    border-bottom-width: 0;
  }
}
</style>
<template>
  <view class="emp-dialog {{ empDialog.show ? 'emp-dialog-show' : '' }}">
    <view class="emp-dialog-mask"></view>
    <view class="emp-dialog-container">
      <view
        wx:if="{{ empDialog.title }}"
        class="emp-dialog-header">{{ empDialog.title }}</view>
      <view
        class="emp-dialog-content {{ empDialog.title ? 'emp-dialog-content-title' : '' }}">{{ empDialog.content }}</view>
      <view
        class="emp-dialog-footer {{ empDialog.buttonsShowVertical ? 'emp-dialog-footer-vertical' : 'emp-dialog-footer-horizon' }}">
        <block wx:for="{{ empDialog.buttons }}" wx:key="{{ item.text }}-{{ item.type }}">
          <button
            class="emp-dialog-button emp-btn"
            data-type="{{ item.type }}"
            catchtap="handleEmpDialogButtonClick"
            style="color: {{ item.color || '#333' }}">{{ item.text }}</button>
        </block>
      </view>
    </view>
  </view>
</template>
<script>
import wepy from 'wepy'

export default class Dialog extends wepy.component {
  props = {}
  data = {
    empDialog: {},
    animationData: {}
  }
  methods = {
    showEmpDialog(options = {}, e) {
      const {
        // 自定义 btn 列表
        // { type: 按钮类型，回调时以此作为区分依据，text: 按钮文案, color: 按钮文字颜色 }
        buttons = [],
        // 标题
        title = '',
        // 内容
        content = ' ',
        // 按钮是否展示为纵向
        buttonsShowVertical = false,
        // 是否展示确定
        showConfirm = true,
        // 确认按钮文案
        confirmText = '确定',
        // 确认按钮颜色
        confirmColor = '#3CC51F',
        // 是否展示取消
        showCancel = false,
        // 取消按钮文案
        cancelText = '取消',
        // 取消按钮颜色
        cancelColor = '#333'
      } = options

      // 处理默认按钮的展示
      // 纵向排布确认按钮在上方
      let showCustomBtns = false
      if (buttons.length === 0) {
        if (showConfirm) {
          buttons.push({
            type: 'confirm',
            text: confirmText,
            color: confirmColor
          })
        }

        if (showCancel) {
          const cancelButton = {
            type: 'cancel',
            text: cancelText,
            color: cancelColor
          }
          if (buttonsShowVertical) {
            buttons.push(cancelButton)
          } else {
            buttons.unshift(cancelButton)
          }
        }
      } else {
        showCustomBtns = true
      }

      return new Promise((resolve, reject) => {
        this.empDialog = {
          show: true,
          showCustomBtns,
          buttons,
          title,
          content,
          buttonsShowVertical,
          showConfirm,
          confirmText,
          confirmColor,
          showCancel,
          cancelText,
          cancelColor,
          // 回调钩子
          resolve,
          reject
        }
        this.$apply()
      })
    },

    handleEmpDialogButtonClick(e) {
      const _f = function() {}
      const { currentTarget = {} } = e
      const { dataset = {} } = currentTarget

      // 获取当次弹出框的信息
      const empDialogData = this.empDialog || {}
      const { resolve = _f, reject = _f } = empDialogData

      // 重置 empDialog 里的内容
      this.empDialog = Object.assign(this.empDialog, { show: false })

      // 自定义按钮，全部 resolve 形式返回，根据 type 区分点击按钮
      if (empDialogData.showCustomBtns) {
        resolve({
          type: dataset.type
        })
        return
      }

      // 默认按钮，确认为 resolve，取消为 reject
      if (dataset.type === 'confirm') {
        resolve({
          type: 'confirm'
        })
      } else {
        reject({
          type: 'cancel'
        })
      }
    }
  }
}
</script>
