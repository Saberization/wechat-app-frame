.esp-label {
  display: inline-block;
  font-size: 12px;
  height: 28px;
  line-height: 28px;
  color: #333;
  border: 1rpx solid #999;
  padding: 0px 10px;
  border-radius: 2px;
  margin-right: 10px;
  box-sizing: border-box;
  vertical-align: middle;
  text-align: center;
}
.esp-label-primary {
  color: #fff;
  background: #f44;
  border: 1rpx solid #f44;
}
.esp-label-disabled {
  color: #cacaca;
  background: #eee;
  border: 1rpx solid #e5e5e5;
}
.esp-label-small {
  font-size: 11px;
  height: 16px;
  line-height: 16px;
  padding: 0px 3px;
}
.esp-label-plain.esp-label-primary {
  color: #f44;
  background: #fff;
}
